@model GrupaEka.Models.ArticleTimeViewModel

@{
    ViewBag.Title = "Dodaj artykuł";
}

<link href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css" rel="stylesheet" type="text/css"/>
<script src="@Url.Content("~/Scripts/DateHelper.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        setDate('#Article_Date');
    });
</script>

<script src="@Url.Content("~/Scripts/tiny_mce/tiny_mce.js")" type="text/javascript"></script>
<script type="text/javascript">
    tinyMCE.init({
        mode: "specific_textareas",
        editor_selector: "TinyMCE",
        theme: "advanced"
    });

    function UpdateText() {
        var text = tinyMCE.get('Article_Text').getContent();
        $('#Article_Text').html(text);
    }
</script>


@using (Html.BeginForm("Create", "Article"))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Artykuł</legend>

        <input type="hidden" name="Article.Author" id="Article.Author" value="@HttpContext.Current.User.Identity.Name" />

        <div class="editor-label">
            @Html.LabelFor(model => model.Article.Title)
        </div>
        <div class="editor-field">
            @Html.ValidationMessageFor(model => model.Article.Title)
            @Html.TextBoxFor(model => model.Article.Title, new { style = "width:20em" })
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Article.Text)
        </div>
        <div class="editor-field">
            @Html.ValidationMessageFor(model => model.Article.Text)
            @Html.TextAreaFor(model => model.Article.Text, new { @class = "TinyMCE" })            
        </div>

        <div class="editor-label" id="date-label">
            @Html.LabelFor(model => model.Article.Date)
        </div>
        <div class="editor-field" id="date-editor">
            @Html.ValidationMessageFor(model => model.Article.Date)
            @Html.EditorFor(model => model.Article.Date) 
        </div>

        <div class="editor-label" id="time-label">
            Godzina
        </div>
        <div class="editor-field" id="time-editor">
            @Html.ValidationMessageFor(model => model.Hour)
            @Html.ValidationMessageFor(model => model.Minutes)
            @Html.EditorFor(model => model.Hour)
            :
            @Html.EditorFor(model => model.Minutes)
            <input type="button" value="Teraz" id="time-now" />
        </div>
        <p>
            <input type="submit" value="Dodaj" onclick="UpdateText()" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Powrót do listy artykułów", "Index")
</div>
