@model GrupaEka.Models.LectureTimeViewModel

@{
    ViewBag.Title = "Dodaj prelekcje";
}

<link href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css" rel="stylesheet" type="text/css"/>
<script src="@Url.Content("~/Scripts/DateHelper.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        setDate('#Lecture_Date');
    });
</script>

<script src="@Url.Content("~/Scripts/tiny_mce/tiny_mce.js")" type="text/javascript"></script>
<script type="text/javascript">
    tinyMCE.init({
        mode: "specific_textareas",
        editor_selector: "TinyMCE",
        theme: "advanced"
    });

    function UpdateText() {
        var text = tinyMCE.get('Lecture_Text').getContent();
        $('#Lecture_Text').html(text);
    }
</script>


@using (Html.BeginForm("Create", "Lecture", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Prelekcja</legend>

        <input type="hidden" name="Lecture.Author" id="Lecture.Author" value="@HttpContext.Current.User.Identity.Name" />

        <div class="editor-label">
            @Html.LabelFor(model => model.Lecture.Title)
        </div>
        <div class="editor-field">
            @Html.ValidationMessageFor(model => model.Lecture.Title)
            @Html.TextBoxFor(model => model.Lecture.Title, new { style = "width:20em" })
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Lecture.Text)
        </div>
        <div class="editor-field">
            @Html.ValidationMessageFor(model => model.Lecture.Text)
            @Html.TextAreaFor(model => model.Lecture.Text, new { @class = "TinyMCE" })            
        </div>

        <div class="editor-label" id="date-label">
            @Html.LabelFor(model => model.Lecture.Date)
        </div>
        <div class="editor-field" id="date-editor">
            @Html.ValidationMessageFor(model => model.Lecture.Date)
            @Html.EditorFor(model => model.Lecture.Date) 
        </div>

        <div class="editor-label" id="time-label">
            Godzina
        </div>
        <div class="editor-field" id="time-editor">
            @Html.ValidationMessageFor(model => model.Hour)
            @Html.ValidationMessageFor(model => model.Minutes)
            @Html.EditorFor(model => model.Hour)
            :
            @Html.EditorFor(model => model.Minutes)
            <input type="button" value="Teraz" id="time-now" />
        </div>      
        
        <div class="editor-label">
                @Html.LabelFor(model => model.Lecture.File)
            </div>
        <div class="editor-field">
            <input type="file" name="Lecture_NewFile" id="Lecture_NewFile" />
        </div> 

        <p>
            <input type="submit" value="Dodaj" onclick="UpdateText()" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Powrót do listy prelekcji", "Index")
</div>
